<!DOCTYPE html>
<html lang="en">
<head>
    <% include partials/head %>
    <script>
        $(document).ready(function() {
            $('#nav_item_new_poll').addClass('active');
        });
    </script>
</head>
<body>
<header>
    <% include partials/user_nav %>
</header>
<div class="container">
    <main>
        <div class="jumbotron">
            <div class="container">
            <% if (create_poll_fail.length > 0) { %>
            <div class="alert alert-danger"><%= create_poll_fail %></div>
            <% } %>

            <% if (create_poll_success.length > 0) { %>
            <div class="alert alert-success"><%= create_poll_success %></div>
            <% } %>
            <form action="/new_poll" method="post">
                <h1>Create a new poll!</h1>
                <div class="form-group">
                    <label for="title">Title: </label>
                    <input class="form-control" type="text" name="title" required/>
                </div>
                <div class="form-group">
                    <label for="options">Options (separate by line): </label>
                    <textarea class="form-control" rows="4" name="options" required></textarea>
                </div>
                <button type="submit" name="submit" value="create" class="btn btn-primary">Create!</button>
            </form>
            </div>
        </div>
    </main>
</div>
</body>
</html>