<div class="jumbotron">
    <div class="container">
    <div class="col-sm-4">
        <p class="poll_title"><%= poll_stats.title %></p>
        <form>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="form-group">
                            <label for="votefor">I'd like to vote for...: </label>
                            <select id="votefor" name="votefor" class="form-control">
                                <option value="" disabled="disabled" selected="selected">Choose an option...: </option>
                                <% for(var i = 0; i < poll_options.length; i++) { %>
                                <option value="<%= poll_options[i].pollid %>"><%= poll_options[i].name %></option>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <input class="btn btn-primary btn-block" type="submit" value="Submit">
                    </div>
                </div>
            </div>
        </form>
    </div>
        </div>
</div>